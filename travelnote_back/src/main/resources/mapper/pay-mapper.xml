<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="kr.co.iei.pay.model.dao.PayDao">

  <select id="selectOneUser" resultType="int">
  	select user_no from user_tbl where user_email=#{userEmail}
  </select>
  
  <insert id="payment">
  	insert into order_pay values(order_pay_seq.nextval, #{userNo}, #{productNo}, sysdate, #{startDate}, #{endDate}, #{people}, #{price}, #{paymentType});
  </insert>
  
</mapper>
